@model PWFU.ViewModels.CreateProject

@{
    ViewData["Title"] = "Crear Proyecto";
}

<section class="min-vh-100">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-header">
                        <h2>Registrar Proyecto</h2>
                    </div>
                    <div class="card-body p-md-5">
                        <form class="mx-1 mx-md-4 row g-3" enctype="multipart/form-data" asp-action="CreateProject" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-12">
                                <label asp-for="Name" class="form-label">Nombre del Proyecto</label>
                                <input asp-for="Name" type="text" class="form-control" id="name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="ProjectGoal" class="form-label">Objetivo del Proyecto</label>
                                <input asp-for="ProjectGoal" type="text" class="form-control" id="projectGoal">
                                <span asp-validation-for="ProjectGoal" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="History" class="form-label">Transfondo</label>
                                <textarea asp-for="History" class="form-control" id="history" rows="4"></textarea>
                                <span asp-validation-for="History" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="BankAccount" class="form-label">Número de Cuenta Bancaria</label>
                                <input asp-for="BankAccount" type="text" class="form-control" id="backAccount">
                                <span asp-validation-for="BankAccount" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MoneyGoal" class="form-label">Meta de Dinero</label>
                                <input asp-for="MoneyGoal" class="form-control" id="moneyGoal">
                                <span asp-validation-for="MoneyGoal" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CategoryId" class="form-label">Categoría del Proyecto</label>
                                <select asp-for="CategoryId" id="categoryId" class="form-select">
                                    <option value="" selected>Seleccione una categoría</option>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DeadLine" class="form-label">Fecha Límite</label>
                                <input asp-for="DeadLine" type="date" class="form-control" id="deadLine">
                                <span asp-validation-for="DeadLine" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Image" class="form-label">Imagen del Proyecto</label>
                                <input asp-for="Image" class="form-control" type="file" id="image" accept="image/png, image/jpeg, image/jpeg, image/gif, image/bmp">
                            </div>
                            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4 mt-5">
                                <button type="submit" class="btn btn-primary btn-lg">Registrar Proyecto</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.getElementById('deadLine').valueAsDate = new Date();
</script>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
