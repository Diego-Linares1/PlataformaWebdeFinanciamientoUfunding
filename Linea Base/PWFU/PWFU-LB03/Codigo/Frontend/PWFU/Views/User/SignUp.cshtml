@model PWFU.ViewModels.SignUpUser

@{
    ViewData["Title"] = "Crear Usuario";
}
<section class="min-vh-100">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <form class="mx-1 mx-md-4" asp-action="SignUp">
                                    <div class="d-flex justify-content-center">
                                        <div class="form-check form-switch mb-3">
                                            <input class="form-check-input" type="checkbox" id="isStudent" asp-for="IsStudent">
                                            <label class="form-check-label" asp-for="IsStudent">Soy Estudiante</label>
                                        </div>
                                    </div>
                                    <div class="form-floating pb-2">
                                        <input type="email" class="form-control" id="email" asp-for="Email" placeholder="name@example.com" required>
                                        <label asp-for="Email">Email</label>
                                    </div>
                                    <div class="form-floating pb-2">
                                        <input type="text" class="form-control" id="name" asp-for="Name" placeholder="Nombres" required>
                                        <label asp-for="Name">Nombres</label>
                                    </div>
                                    <div class="form-floating pb-2">
                                        <input type="text" class="form-control" id="surname" asp-for="Surname" placeholder="Apellidos" required>
                                        <label asp-for="Surname">Apellidos</label>
                                    </div>
                                    <div class="form-floating pb-2">
                                        <input type="password" class="form-control" id="password" asp-for="Password" placeholder="Contraseña" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@@#$%^&*])[a-zA-Z\d!@@#$%^&*]{8,}$" title="La contraseña debe ser de min. 8 caracteres e incluir por lo menos una letra mayúscula, minúscula, un número y un caracter especial" required>
                                        <label asp-for="Password">Contraseña</label>
                                    </div>
                                    <div id="studentInfoContainer" style="display: none">
                                        <div class="form-floating pb-2">
                                            <select asp-for="University" class="form-select" id="university" aria-label="Floating label select example">
                                                <option value="" selected>Seleccione su universidad</option>
                                                <option value="Universidad Nacional Mayor de San Marcos">Universidad Nacional Mayor de San Marcos</option>
                                                <option value="Universidad Nacional de Ingeniería">Universidad Nacional de Ingeniería</option>
                                                <option value="Universidad Federico Villareal">Universidad Federico Villareal</option>
                                            </select>
                                            <label asp-for="University">Universidad</label>
                                        </div>
                                        <div class="form-floating pb-2">
                                            <select asp-for="Speciality" class="form-select" id="speciality" aria-label="Floating label select example">
                                                <option value="" selected>Seleccione su especialidad</option>
                                                <option value="Ingeniería Industrial">Ingeniería Industrial</option>
                                                <option value="Ingeniería Ambienta">Ingeniería Ambiental</option>
                                                <option value="Ingeniería de Software">Ingeniería de Software</option>
                                                <option value="Ingeniería Civíl">Ingeniería Civíl</option>
                                            </select>
                                            <label asp-for="Speciality">Especialidad</label>
                                        </div>
                                        <div class="row g-2 pb-2">
                                            <div class="col-md">
                                                <div class="form-floating">
                                                    <select class="form-select" asp-for="Semester" id="semester" aria-label="Floating label select example">
                                                        <option value="" selected>Seleccione</option>
                                                        <option value="1">1</option>
                                                        <option value="2">2</option>
                                                        <option value="3">3</option>
                                                        <option value="4">4</option>
                                                        <option value="5">5</option>
                                                        <option value="6">6</option>
                                                        <option value="7">7</option>
                                                        <option value="8">8</option>
                                                        <option value="9">9</option>
                                                        <option value="10">10</option>
                                                    </select>
                                                    <label asp-for="Semester">Semestre Actual</label>
                                                </div>
                                            </div>
                                            <div class="col-md">
                                                <div class="form-floating">
                                                    <select class="form-select" asp-for="YearOfEntry" id="yearOfEntry" aria-label="Floating label select example">
                                                        <option value="" selected>Seleccione</option>
                                                        <option value=2018>2018</option>
                                                        <option value=2019>2019</option>
                                                        <option value=2020>2020</option>
                                                        <option value=2021>2021</option>
                                                        <option value=2022>2022</option>
                                                        <option value=2023>2023</option>
                                                    </select>
                                                    <label asp-for="YearOfEntry">Año de Ingreso</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="form-check d-flex justify-content-center mt-4 mb-5">
                                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" required/>
                                        <label class="form-check-label" for="form2Example3">
                                            Estoy de acuerdo con los <a href="#!">Terminos y Condiciones</a>
                                        </label>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Registrarse</button>
                                    </div>


                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://www.allen.ac.in/ace2324/assets/images/register.png"
                                     class="img-fluid" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const isStudent = document.getElementById("isStudent");
    const university = document.getElementById("university");
    const speciality = document.getElementById("speciality");
    const semester = document.getElementById("semester");
    const yearOfEntry = document.getElementById("yearOfEntry");
    const studentInfoContainer = document.getElementById("studentInfoContainer");

    isStudent.addEventListener('change', function () {
        if (isStudent.checked) {
            university.required = true;
            speciality.required = true;
            semester.required = true;
            yearOfEntry.required = true;
            studentInfoContainer.style.display = 'block';
        } else {
            university.required = false;
            speciality.required = false;
            semester.required = false;
            yearOfEntry.required = false;
            studentInfoContainer.style.display = 'none';
        }
    });
</script>